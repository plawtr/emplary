
= devise_error_messages!
.row
  .large-6.large-centered.columns{style: "padding-top: 50px;"}
    %h1 Sign up
    %h4{style: "padding-bottom: 30px;"} 
    .row
      .large-6.large-centered.columns
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        .row.collapse
          .small-2.columns
            %span.prefix
              %i.fi-mail{style: "font-size: 2em;"}
          .small-10.columns
            = f.email_field :email, autofocus: true, :placeholder => "Email", :required => true      
        .row.collapse
          .small-2.columns
            %span.prefix
              %i.fi-torso{style: "font-size: 2em;"}
          .small-10.columns
            = f.text_field :first_name, :placeholder => "First Name", :required => true      
        .row.collapse
          .small-2.columns
            %span.prefix
              %i.fi-torso-business{style: "font-size: 2em;"}
          .small-10.columns
            = f.text_field :last_name, :placeholder => "Last Name", :required => true      
          .row.collapse
            .small-2.columns
              %span.prefix
                %i.fi-lock{style: "font-size: 2em;"}
            .small-10.columns
              = f.password_field :password, autocomplete: "off", :placeholder => "Password", :required => true
          .row.collapse
            .small-2.columns
              %span.prefix
                %i.fi-lock{style: "font-size: 2em;"}
            .small-10.columns
              = f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Password confirmation", :required => true
          .row.collapse
            .small-7.small-offset-5.columns
              = f.submit "Sign up", :class => "button"
            %br
          = render "devise/shared/links"