= devise_error_messages!
.row
  .large-6.large-centered.columns{style: "padding-top: 50px;"}
    %h1 Resend unlock instructions
    = form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f|
      .row.collapse
        .small-2.columns
          %span.prefix
            %i.fi-mail{style: "font-size: 2em;"}
        .small-10.columns
          = f.email_field :email, autofocus: true, :placeholder => "Email", :required => true
      .row.collapse
        .small-8.small-offset-4.columns
          = f.submit "Resend unlock instructions", :class => "button"
      = render "devise/shared/links"
